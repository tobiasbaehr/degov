/**
 * Implements hook_theme_suggestions_hook_alter.
 *
 * {@inheritDoc}
 */
function degov_theme_suggestions_html_alter(array &$suggestions) {
  if (drupal_installation_attempted()) {
    $suggestions[] = 'html__installation';
  }
}
