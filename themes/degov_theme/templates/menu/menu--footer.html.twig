{#
/**
 * @file
 * Theme override to display a menu.
 *
 * Available variables:
 * - menu_name: The machine name of the menu.
 * - items: A nested list of menu items. Each menu item contains:
 *   - attributes: HTML attributes for the menu item.
 *   - below: The menu item child items.
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *   - localized_options: Menu link localized options.
 *   - is_expanded: TRUE if the link has visible children within the current
 *     menu tree.
 *   - is_collapsed: TRUE if the link has children within the current menu tree
 *     that are not currently visible.
 *   - in_active_trail: TRUE if the link is in the active trail.
 */
#}
{% import _self as menus %}

{#
  We call a macro which calls itself to render the full tree.
  @see http://twig.sensiolabs.org/doc/tags/macro.html
#}
{{ menus.menu_links(items, attributes, 0, '') }}

{% macro menu_links(items, attributes, menu_level, identifier) %}
  {% import _self as menus %}
  {% if items %}
    {% if menu_level == 0 %}
      <ul{{ attributes.addClass(['row', 'list-unstyled']) }}>
        {% for item in items %}
          {% set classes_list_item = [
            'col-sm-6',
            'col-md-4',
            'col-lg-2',
            'col-12',
            'first-level',
            'pt-4'
          ] %}
          {% set classes_link = [
            'first-level-link',
            item.in_active_trail ? 'active'
          ] %}
          <li{{ item.attributes.addClass(classes_list_item) }}>
            {% if item.below %}
              {% set title_url = item.title.toString ~ item.url.toString %}
              {% set identifier = title_url|replace({' ':'-'})|clean_class|lower %}
              {{ link(item.title, item.url, { 'class': classes_link, 'data-toggle' : 'collapse', 'data-target' : '.' ~ identifier, 'aria-expanded' : 'false', 'aria-controls' : '' }) }}
              {{ menus.menu_links(item.below, attributes, menu_level + 1, identifier) }}
            {% else %}
              {{ link(item.title, item.url, { 'class': classes_link }) }}
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    {% elseif menu_level == 1 %}
      <ul{{ attributes.removeClass('d-flex', 'row').addClass(['mt-2', 'mt-md-3']) }}>
        {% for item in items %}
          {% set classes_list_item = [
            'secont-level'
          ] %}
          {% set classes_link = [
            'second-level-link',
            item.in_active_trail ? 'active'
          ] %}
          <li{{ item.attributes.addClass(classes_list_item) }}>
            {% if item.below %}
              {% set title_url = item.title.toString ~ item.url.toString %}
              {% set identifier = title_url|replace({' ':'-'})|clean_class|lower %}
              <i class="chevron fas fa-chevron-right"></i>
              {{ link(item.title, item.url, { 'class': classes_link, 'data-toggle' : 'collapse', 'data-target' : '.' ~ identifier, 'aria-expanded' : 'false', 'aria-controls' : '' }) }}
              {{ menus.menu_links(item.below, attributes, menu_level + 1, identifier) }}
            {% else %}
              {{ link(item.title, item.url, { 'class': classes_link }) }}
            {% endif %}
          </li>
        {% endfor %}
      </ul>

    {% else %}
      <div class="collapse {{ identifier }}">
        {% for item in items %}
          {#'dropdown-item',#}
          {% set classes_link = [
            'd-block',
            'pl-3',
            item.in_active_trail ? 'active'
          ] %}
          {{ link(item.title, item.url, { 'class': classes_link }) }}
          {% if item.below %}
            {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  {% endif %}
{% endmacro %}
