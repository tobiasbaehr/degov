{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{% set media_classes = [
'video-mobile',
'media--search',
'clearfix',
] %}
<article{{ attributes.addClass(media_classes) }}>
  <div class="media--search__type-text">{{ 'Video'|t }}</div>
  <a href="{{ video_url }}">
    {% if content.field_video_mobile_preview|field_value %}
      <div class="video-mobile__video">{{ content.field_video_mobile_preview|field_value }}</div>
    {% else %}
      <div class="media--search__dummy"></div>
    {% endif %}
  </a>
  {% if content.field_title %}
    <div class="media--search__info">
      <div class="media--search__date video_upload__date">
        {{ content.field_media_publish_date|field_value }}
      </div>
      <span class="media--search__caption">{{ content.field_title|field_value }}</span>
    </div>
  {% endif %}
  {% if content.field_tags|field_value %}
    <div class="media--search__tags tags">{{ content.field_tags }}</div>
  {% endif %}
</article>
