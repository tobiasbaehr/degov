# E. g. degov/degov degov/nrw_theme
INSTALL_PROJECT_UPDATE_WHITELIST=""
GIT_LFS_PROJECT=degov/degov_devel_git_lfs
CI_ROOT_DIR=$BITBUCKET_CLONE_DIR
